function selected(o)
{
    if (o.checked == true)
    {
        o.name=o.id
    }
    else if(o.checked == false)
    {
        o.removeAttribute('name')
    }
}

function checkThree()
{
    input=document.getElementsByTagName('input')
    count=0;
    for(var i=0;i<input.length;i++)
    {
        if(input[i].type=='checkbox' && input[i].checked==true)
            {
            count++
            selected(input[i])
            }
         
         if(input[i].disabled)
             {
                 input[i].disabled=false
                 //alert(input[i].id)
             }
    }
    //alert(count)
    if (count>3) 
    {
        alert('You can only apply for 3 companies')
        return false;
    }
    return true;
}
function a(o)
{
    alert(o.value);
}
</script>
